<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jee="http://www.springframework.org/schema/jee"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/jee 
        http://www.springframework.org/schema/jee/spring-jee-4.0.xsd">

    <jee:local-slsb id="WapiApplicationManagerSlsb" 
        jndi-name="java:app/wapi-persistence-${pom.version}/WapiApplicationManagerBean"
        business-interface="de.urb.wapi.persistence.beans.WapiApplicationManager"/>
    <jee:local-slsb id="WapiApiManagerSlsb" 
        jndi-name="java:app/wapi-persistence-${pom.version}/WapiApiManagerBean"
        business-interface="de.urb.wapi.persistence.beans.WapiApiManager"/>
    <jee:local-slsb id="WapiAppConfigManagerSlsb" 
        jndi-name="java:app/wapi-persistence-${pom.version}/WapiAppConfigManagerBean"
        business-interface="de.urb.wapi.persistence.beans.WapiAppConfigManager"/>
    <jee:local-slsb id="CustomerRegistryManagerSlsb" 
        jndi-name="java:app/wapi-persistence-${pom.version}/CustomerRegistryManagerBean"
        business-interface="de.urb.wapi.persistence.beans.CustomerRegistryManager"/>
    
</beans>
